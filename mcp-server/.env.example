# SheetStorm MCP Server Configuration
# =====================================

# SheetStorm Backend API URL
SHEETSTORM_API_URL=http://localhost:5000/api/v1

# Authentication (Option A: Pre-configured API token)
# SHEETSTORM_API_TOKEN=your-jwt-token-here

# Authentication (Option B: Username/password auto-login)
SHEETSTORM_USERNAME=admin@sheetstorm.local
SHEETSTORM_PASSWORD=changeme

# MCP Transport: stdio (default) or sse
MCP_TRANSPORT=stdio

# SSE transport port (only used when MCP_TRANSPORT=sse)
MCP_SSE_PORT=8080

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# HTTP client timeout in seconds
HTTP_TIMEOUT=30

# HTTP client max retries for transient failures
HTTP_MAX_RETRIES=2
